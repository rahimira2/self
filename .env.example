# Telegram Music Bot Environment Variables
# کپی کنید به .env و مقادیر واقعی را وارد کنید

# Bot Configuration
BOT_TOKEN=YOUR_BOT_TOKEN_HERE
API_ID=YOUR_API_ID_HERE  
API_HASH=YOUR_API_HASH_HERE
PHONE_NUMBER=YOUR_PHONE_NUMBER

# Bot Settings
OWNER_ID=YOUR_USER_ID_HERE
WEB_SECRET=your_secure_secret_key_2024

# Optional Database (for future use)
DB_PASSWORD=secure_database_password

# Web Panel Settings
WEB_PORT=8080
WEB_HOST=0.0.0.0

# Music Settings
MAX_QUEUE_SIZE=50
MAX_DURATION=3600
DEFAULT_VOLUME=50

# File Paths
DOWNLOAD_PATH=./downloads/
LOG_PATH=./logs/

# YouTube Settings
YOUTUBE_QUALITY=best[height<=720]

# Debug Settings
DEBUG_MODE=false
LOG_LEVEL=INFO